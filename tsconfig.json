{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",        // Diretório de códigos TypeScript
    "outDir": "lib",         // Diretório de saída para os arquivos compilados
    "sourceMap": true,       // Gera mapas de origem para facilitar o debug
    "noImplicitAny": true,   // Não permite declaração de variáveis ou parâmetros sem tipo
    "noImplicitReturns": true, // Verifica se todas as funções possuem tipo de retorno informado
    "noEmitOnError": true,   // Não gera o código JS caso haja algum erro durante o processo de compilação
    "strictNullChecks": true,// Força a verificação de valores null ou undefined
    "noUnusedLocals": true,  // Sinaliza quando existem variáveis declaradas e não utilizadas
    "esModuleInterop": true  // Permite usar import default de libs CommonJS (express, etc.)
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
